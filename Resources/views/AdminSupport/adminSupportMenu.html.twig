{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}
    {{ 
        parent() ~
        ' - ' ~
        type.getName()|trans({}, 'support')
    }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'formalibre_support_management_tool'|trans({}, 'tools'),
                'href': path('formalibre_admin_support_index')
            },
            {
                'name': type.getName()|trans({}, 'support'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ type.getName()|trans({}, 'support') }}
        </h3>
    </div>
    <div class="panel-body">
        
        {% render(controller('FormaLibreSupportBundle:AdminSupport:adminSupportTabs', {'type': type.getId(), 'supportName': supportName})) %}
        
        <br>
        <div>
            {% if tickets|length > 0 %}
                {% block adminSupport %}{% endblock %}
            {% else %}
                <div class="alert alert-info">
                    {{ 'no_ticket'|trans({}, 'support') }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}