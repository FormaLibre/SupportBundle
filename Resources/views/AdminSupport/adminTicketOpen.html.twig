{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% set type = ticket.getType() %}
{% set ticketUser = ticket.getUser() %}
{% set comments = ticket.getComments() %}
{% set interventions = ticket.getInterventions() %}

{% block title %}
    {{ 
        parent() ~
        ' - ' ~
        ticket.getTitle()
    }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'formalibre_support_management_tool'|trans({}, 'tools'),
                'href': path('formalibre_admin_support_index')
            },
            {
                'name': type.getName()|trans({}, 'support'),
                'href': path('formalibre_admin_support_new', {'type': type.getId()})
            },
            {
                'name': ('l' ~ ticket.getLevel())|trans({}, 'support'),
                'href': path('formalibre_admin_support_level', {'type': type.getId(), 'level': ticket.getLevel()})
            },
            {
                'name': ticket.getTitle(),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ ticket.getTitle() }}
        </h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>{{ 'creator'|trans({}, 'platform') }}</th>
                    <td>
                        {{ ticketUser.getFirstName() }}
                        {{ ticketUser.getLastName() }}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'contact'|trans({}, 'platform') }}</th>
                    <td>
                        <i class="fa fa-envelope-o"></i> :
                        {{ ticket.getContactMail() }}
                        <br>
                        <i class="fa fa-phone"></i> :
                        {{ ticket.getContactPhone() }}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'creation_date'|trans({}, 'platform') }}</th>
                    <td>
                        {{ ticket.getCreationDate()|intl_date_format }}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'description'|trans({}, 'platform') }}</th>
                    <td>
                        {{ ticket.description()|raw }}
                    </td>
                </tr>
            </table>
        </div>
        <hr>
        <h3>{{ 'comments'|trans({}, 'support') }}</h3>
        
        {% if comments|length > 0 %}
            <ul>
                {% for comment in comments %}
                    <li>
                        {{ comment.getContent()|raw }}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="alert alert-info">
                {{ 'no_comment'|trans({}, 'support') }}
            </div>
        {% endif %}
        <br>
        <div id="ticket-comment-form-box">
            {% render(controller("FormaLibreSupportBundle:AdminSupport:adminTicketCommentCreateForm", {'ticket': ticket.getId()})) %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"
            src="{{ url('bazinga_jstranslation_js', { 'domain': 'support' }) }}"
    >
    </script>
    <script src='{{ asset('bundles/formalibresupport/js/adminTicketOpen.js') }}'
            type="text/javascript"
    >
    </script>
{% endblock %}